.container.section-title data-aos="fade-up"
  span.description-title Rooms
  h2 Google Reviews
  p Hear from our satisfied residents! Read the experiences

section.google-reviews.container.section
  css:
      /* Google Reviews - scoped styles */
      .google-reviews-wrapper {
          /*max-width: 1100px;*/
          margin: 0 auto;
          /*padding: 2rem 1rem;*/
          font-family: var(--default-font, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial);
      }

      |
      .google-review {
          background: #ffffff;
          border-radius: 12px;
          box-shadow: 0 6px 20px rgba(24, 39, 75, 0.08);
          padding: 1rem;
          margin-bottom: 1rem;
          transition: transform 220ms ease, box-shadow 220ms ease;
          overflow: hidden;
      }

      .google-review:hover {
          transform: translateY(-6px);
          box-shadow: 0 14px 36px rgba(24, 39, 75, 0.12);
      }

      |
      .review-header {
          display: flex;
          gap: 1rem;
          align-items: flex-start;
      }

      .reviewer-info {
          display: flex;
          gap: 0.75rem;
          align-items: center;
          min-width: 0;
      }

      .reviewer-photo {
          width: 64px;
          height: 64px;
          border-radius: 50%;
          object-fit: cover;
          flex: 0 0 64px;
          border: 2px solid rgba(0, 0, 0, 0.06);
      }

      .reviewer-details {
          min-width: 0;
      }

      .reviewer-name {
          font-weight: 700;
          font-size: 1rem;
          color: #0f172a;
          margin-bottom: 0.125rem;
          white-space: nowrap;
          overflow: hidden;
          text-overflow: ellipsis;
      }

      .review-date {
          font-size: 0.85rem;
          color: #6b7280;
      }

      |
      .review-rating {
          margin-left: auto;
          display: flex;
          gap: 0.15rem;
          align-items: center;
      }

      .review-rating i.fas.fa-star, .review-rating i.far.fa-star {
          font-size: 0.95rem;
      }

      .review-rating i.fas.fa-star {
          color: #f59e0b;
          text-shadow: 0 1px 0 rgba(0, 0, 0, 0.02);
      }

      .review-rating i.far.fa-star {
          color: #e6e6e6;
      }

      |
      .review-text {
          margin-top: 0.75rem;
          color: #0f172a;
          line-height: 1.55;
          font-size: 0.97rem;
      }

      |
      /* Images inside reviews */
      .review-images {
          display: flex;
          gap: 0.5rem;
          margin-top: 0.75rem;
          flex-wrap: wrap;
      }

      .review-images img {
          width: 96px;
          height: 96px;
          object-fit: cover;
          border-radius: 8px;
          box-shadow: 0 6px 18px rgba(16, 24, 40, 0.06);
          border: 1px solid rgba(0, 0, 0, 0.03);
      }

      |

      /* small screens */
      @media (max-width: 576px) {
          .review-header {
              flex-direction: column;
              align-items: flex-start;
          }

          .review-rating {
              margin-left: 0;
          }

          .reviewer-photo {
              width: 56px;
              height: 56px;
          }

          .review-images img {
              width: 72px;
              height: 72px;
          }
      }
  .row.google-reviews-wrapper
    - get_reviews.each do |review|
      - next if review[:rating] < 4
      .google-review.col-md-4
        .review-header.p-3.m-3
          .reviewer-info
            img.reviewer-photo src=review[:image] alt=review[:name]
            .reviewer-details
              .reviewer-name= review[:name]
              .review-date= review[:date]
          .review-rating
            - review[:rating].times do
              i.bi.bi-star-fill.stars
            - (5 - review[:rating]).times do
              i.bi.bi-star
          .review-text= review[:text]